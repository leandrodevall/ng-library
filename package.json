{
  "name": "lib-release",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:lib && npm run build:showcase",
    "build:lib": "ng build release-me",
    "build:showcase": "ng build release-me-showcase",
    "postbuild:lib": "npm run generate:toc && cp README.md dist/release-me-daddy && cp LICENSE dist/release-me-daddy",
    "watch": "ng build --watch --configuration development",
    "format:check": "npm run format:check-lib && npm run format:check-showcase",
    "format:check-lib": "prettier --check \"projects/release-me/**/*.{ts,js,json,html,scss}\"",
    "format:check-showcase": "prettier --check \"projects/release-me-showcase/**/*.{ts,js,json,html,scss}\"",
    "format:write": "npm run format:write-lib && npm run format:write-showcase",
    "format:write-lib": "prettier --write \"projects/release-me/**/*.{ts,js,json,html,scss}\"",
    "format:write-showcase": "prettier --write \"projects/release-me-showcase/**/*.{ts,js,json,html,scss}\"",
    "lint": "npm run lint:lib && npm run lint:showcase",
    "lint:lib": "eslint \"projects/release-me/**/*.{ts,js}\" --fix",
    "lint:showcase": "eslint \"projects/release-me-showcase/**/*.{ts,js}\" --fix",
    "generate:toc": "npx doctoc README.md",
    "test": "ng test",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.10",
    "@angular-eslint/builder": "17.2.0",
    "@angular-eslint/eslint-plugin": "17.2.0",
    "@angular-eslint/eslint-plugin-template": "17.2.0",
    "@angular-eslint/schematics": "17.2.0",
    "@angular-eslint/template-parser": "17.2.0",
    "@angular/cli": "^17.0.10",
    "@angular/compiler-cli": "^17.0.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-angular": "^17.8.1",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "typescript": "~5.2.2"
  }
}
